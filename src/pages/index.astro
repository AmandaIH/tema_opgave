---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import ScrollingContainer from "../components/ScrollingContainer.astro";
import Experience from "../components/Experience.astro";
import CoreValues from "../components/CoreValues.astro";
import Newsletter from "../components/Newsletter.astro";

let coreValuesData = [];

try {
  const res = await fetch("https://frontend-design-theme.netlify.app/api/coreValues");
  coreValuesData = await res.json();
} catch (error) {
  console.error("Failed to fetch core values data:", error);
}
---

<Layout>

  <Hero />
  <Services />
  <section class="whattoexpect">
    <div>
  <figure class="figure-people">
    <img class="people" src="/public/img/whattoexpect.png" alt="People">
  </figure>
  </div>
  <div>
  <p class="yellow">WE'LL WORK WITH YOU</p>
  <h3>What To Expect</h3>
  <p>Our collaboration is built on transparency, efficiency, and measurable results. Together, we create strategies tailored to your unique needs and goals.</p>
  <ul>
    <li>Collaborate to build actionable strategies that drive sustainable growth and deliver tangible outcomes.</li>
    <li>Identify opportunities to optimize processes and implement impactful solutions with measurable results.</li>
  </ul>
  </div>
</section>
<ScrollingContainer />
<Experience />
<CoreValues coreValuesData={coreValuesData} theme="light" />

<section class="contactUs">
<div class="contactInfo">
  <p class="yellow">PROCESS</p>
  <h3>Contact Us. It's Easy.</h3>
  <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
  <div class="infoBlock">
  <img src="/public/icons/phone.svg" alt="Phone">
  <div class="infoText">
  <p>Call Today</p>
  <p>+1 800 100 900</p>
</div>
</div>
  <div class="infoBlock">
  <img src="/public/icons/clock.svg" alt="Clock">
  <div class="infoText">
  <p>Monday To Friday</p>
  <p>9AM - 5PM</p>
</div>
</div>
  <div class="infoBlock">
  <img src="/public/icons/pin.svg" alt="Pin">
  <div class="infoText">
  <p>USA Office</p>
  <p>195 Devonshire St Boston, MA 02110</p>
</div>
</div>
</div>
<div class="pics">
    <img class="onePerson" src="/public/img/lady.png" alt="Lady">
    <img class="more" src="/public/img/more.png" alt="Two ladies talking">
  <img class="hands" src="/public/img/hands.png" alt="Hands gesturing">
</div>
</section>
<Newsletter />

</Layout>

<style>
@layer component {
  .whattoexpect {
    grid-column: content;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
figure {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0;
}
  .figure-people::before {
    content: '';
    background: #4EAF4E;
    height: 100px;
    width: 100px;
    position: absolute;
    top: -1rem;
    left: -1rem;
    z-index: -1;
    border-radius: 9px;
  }

  .figure-people::after {
      content: '';
    background: url(/public/img/Pattern.png);
    height: 200px;
    width: 200px;
    position: absolute;
    top: -3rem;
    left: -3rem;
    z-index: -2;
    }

.people {
  inline-size: 100%;
  display: block;
  border-radius: 9px;
}

.whattoexpect > div {
  max-width: 100%;
}

.yellow {
  background-color: #FFCC4A;
  border-radius: 9px;
  display: inline-block;
}

ul {
  display: grid;
  gap: 1rem;
  line-height: 1.5;
  padding-left: 0;
}

li {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 1rem;
  font-size: 1rem;
  color: #595566;
}

li:before {
  content: '';
  width: 1.6rem;
  height: 1lh;
  background: var(--checkmark-icon) 50% 50% / 100% auto no-repeat;
  background-position: 50% 50%;
  background-size: 100% auto;
}

.contactUs {
  grid-column: content;
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding-top: 3rem;
  padding-bottom: 3rem;
}


.infoBlock {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
}
.infoText {
  display: flex;
  flex-direction: column;
}
.figure-onePerson::after {
  content: none; 
}

.figure-more::before {
  content: none; 
}

.pics {
  display: grid;
  grid-template-areas:
    "a b"
    "a c";
    gap: 0.5rem;
}

.onePerson {
  grid-area: a;
  object-fit: contain;
  height: 100%;
}

.more {
  grid-area: b;
  object-fit: contain;
  border-radius: 15px;
  width: 100%; 
    max-width: 100%;
}

.hands {
  grid-area: c;
  object-fit: contain;
  border-radius: 15px;
  margin: 0; 
  padding: 0;
}

}
@layer overrides {
 
}

</style>

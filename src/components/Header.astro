<nav>
    <div class="nav-container">
      <img src="/public/img/AskExperts.png" alt="Logo">  
    <ul class="nav-links">
        <li><a href="/index/">Home</a></li>
        <li><a href="/case_study/">Case Study</a></li>
        <li><a href="/team/">Team</a></li>
        <li><a href="/about/">About</a></li>
    </ul>
    <button popovertarget="popup">Login</button>
    </div>
</nav>

<div id="popup" popover>
    
    <form action="login" method="POST">
        <h4>Dashboard Login</h4>
        
        <label for="email">Email address</label>
        <input type="text" id="email" name="email" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Login</button>
    </form>
</div>



<style>
    @layer components {
        nav {
          grid-column: content;
        }
        a {
            color: var(--secondary02);
            text-decoration: none;
            }

     .nav-container {
      grid-column: content;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 2rem;
      margin: 0 auto;
     }   

     .nav-links {
        list-style-type: none;
        display: flex;
        gap: 2rem;
        margin: 0;
        padding: 0;
  }
       
  form {
    display: flex;
    flex-direction: column;
}
::backdrop {
  background: #0003;
  backdrop-filter: blur(4px);
}

[popover] {
  opacity: 0;
  translate: 0 -100%;
  
  transition: .6s;
  transition-property: opacity, display, overlay, translate;
  transition-behavior: allow-discrete;
}


:popover-open {
  opacity: 1;
  translate 0 0;
  
  @starting-style {
    opacity: 0;
    translate: 0 100%;
  }
}

button {
    background-color: var(--primary01);
    border-radius: 19px;
    padding: 9px;
}


 }   
</style>